<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".information.mainpage.MainPageActivity">
    <TextView
        android:id="@+id/tv_community_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="星光社区"
        android:textSize="19sp"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="20dp"></TextView>
    <LinearLayout
        android:id="@+id/ln_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/tv_community_name"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_toRightOf="@id/tv_community_name"
            android:layout_marginTop="3dp"
            android:src="@mipmap/search"
            android:visibility="invisible"
            ></ImageView>
        <TextView
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:text="搜索信息"
            android:gravity="center|left"
            android:background="@drawable/tv_white"
            android:textSize="16sp"
            android:layout_marginLeft="1dp"
            android:visibility="invisible"
            ></TextView>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:orientation="vertical"
        android:background="#C6C493"
        android:layout_below="@id/tv_community_name"
        android:layout_marginTop="10dp"
        ></LinearLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="660dp"
        android:layout_above="@id/bottom_option"
        android:layout_below="@id/line1"
        android:layout_marginTop="5dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <FrameLayout
                android:id="@+id/main_frames"
                android:layout_width="match_parent"
                android:layout_height="660dp"
                android:visibility="invisible"
                ></FrameLayout>
<!--            ==================================-->
            <RelativeLayout
                android:id="@+id/rl_main_page"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/nav_note"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=">> 社区公告"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="3dp"
                    android:textColor="@color/green"
                    >
                </TextView>

                <include
                    android:id="@+id/note"
                    layout="@layout/note_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/nav_note"
                    android:layout_marginTop="10dp"
                    ></include>

                <TextView
                    android:id="@+id/tv_more_notes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/note"
                    android:text="查看更多"
                    android:textColor="@color/green"
                    android:layout_marginLeft="140dp"
                    android:textSize="17sp"
                    android:layout_marginTop="15dp"></TextView>
                <LinearLayout
                    android:id="@+id/line2"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:orientation="vertical"
                    android:background="#C6C493"
                    android:layout_below="@id/tv_more_notes"
                    android:layout_marginTop="10dp"
                    ></LinearLayout>
                <TextView
                    android:id="@+id/nav_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=">> 社区信息"
                    android:textColor="@color/green"
                    android:layout_marginLeft="20dp"
                    android:layout_below="@id/line2"
                    android:layout_marginTop="10dp"
                    />

                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/nag_view_pager"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_below="@id/nav_category"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/item_bg2"
                    ></androidx.viewpager.widget.ViewPager>
                <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
                    android:id="@+id/dots_indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/nag_view_pager"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="3dp"
                    app:dotsSize="5dp"
                    app:dotsSpacing="4dp"></com.tbuonomo.viewpagerdotsindicator.DotsIndicator>
                <LinearLayout
                    android:id="@+id/line3"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:orientation="vertical"
                    android:background="#C6C493"
                    android:layout_below="@id/dots_indicator"
                    android:layout_marginTop="10dp"
                    ></LinearLayout>
                <TextView
                    android:id="@+id/nav_news"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=">> 社区新闻"
                    android:textColor="@color/green"
                    android:layout_marginLeft="20dp"
                    android:layout_below="@id/line3"
                    android:layout_marginTop="10dp"
                    />
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_news"
                    android:layout_width="match_parent"
                    android:layout_height="230dp"
                    android:layout_below="@id/nav_news"
                    android:layout_marginTop="10dp"
                    >
                </androidx.recyclerview.widget.RecyclerView>
            </RelativeLayout>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/bottom_option"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:padding="5dp"
        android:layout_marginBottom="6dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/tv_main_page"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/main_page_bottom_textSize"
            android:text="首页"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_weight="1"
            ></TextView>

        <TextView
            android:id="@+id/tv_recommand"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/main_page_bottom_textSize"
            android:text="推荐"
            android:gravity="center"
            android:layout_weight="1"
            ></TextView>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_addpost"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@mipmap/ic_newpost"
            app:shapeAppearance="@style/circleStyle"
            android:clickable="true"
            />

        <TextView
            android:id="@+id/tv_following"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/main_page_bottom_textSize"
            android:text="关注"
            android:gravity="center"
            android:layout_weight="1"
            ></TextView>

        <TextView
            android:id="@+id/tv_profile"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/main_page_bottom_textSize"
            android:text="我的"
            android:gravity="center"
            android:layout_weight="1"
            ></TextView>

    </LinearLayout>




</RelativeLayout>