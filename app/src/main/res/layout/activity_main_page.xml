<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".information.mainpage.MainPageActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        app:title=""
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        >
    </androidx.appcompat.widget.Toolbar>

    <FrameLayout
        android:id="@+id/main_frames"
        android:layout_width="match_parent"
        android:layout_height="618dp"
        android:layout_below="@id/toolbar"
        android:layout_above="@id/bottom_option"
        ></FrameLayout>

    <LinearLayout
        android:id="@+id/bottom_option"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:padding="5dp"
        android:layout_marginBottom="6dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/tv_main_page"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/main_page_bottom_textSize"
            android:text="首页"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_weight="1"
            ></TextView>

        <TextView
            android:id="@+id/tv_recommand"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/main_page_bottom_textSize"
            android:text="推荐"
            android:gravity="center"
            android:layout_weight="1"
            ></TextView>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_addpost"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@mipmap/ic_newpost"
            app:shapeAppearance="@style/circleStyle"
            android:clickable="true"
            />

        <TextView
            android:id="@+id/tv_following"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/main_page_bottom_textSize"
            android:text="关注"
            android:gravity="center"
            android:layout_weight="1"
            ></TextView>

        <TextView
            android:id="@+id/tv_profile"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/main_page_bottom_textSize"
            android:text="我的"
            android:gravity="center"
            android:layout_weight="1"
            ></TextView>

    </LinearLayout>




</RelativeLayout>