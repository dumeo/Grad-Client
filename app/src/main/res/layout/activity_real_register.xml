<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user.RealRegisterActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/register_useravatar"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_gravity="center"
                android:layout_marginTop="80dp"
                android:padding="1dp"
                android:src="@drawable/ic_launcher_background"
                app:shapeAppearance="@style/circleStyle"
                android:shadowColor="@android:color/holo_blue_bright"
                app:strokeWidth="2dp"/>

            <RelativeLayout
                android:id="@+id/rl_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                >
                <EditText
                    android:id="@+id/email"
                    android:layout_width="@dimen/edittext_width"
                    android:layout_height="@dimen/edittext_height"
                    android:hint="邮箱地址"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/et_background"
                    />

                <EditText
                    android:id="@+id/username"
                    android:layout_width="@dimen/edittext_width"
                    android:layout_height="@dimen/edittext_height"
                    android:hint="用户名"
                    android:layout_below="@id/email"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/et_background"
                    />

                <EditText
                    android:id="@+id/password"
                    android:layout_width="@dimen/edittext_width"
                    android:layout_height="@dimen/edittext_height"
                    android:hint="密码"
                    android:inputType="textPassword"
                    android:layout_below="@id/username"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/et_background"
                    />

                <CheckBox
                    android:id="@+id/gb_gwh"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_below="@id/password"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="90dp"
                    ></CheckBox>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:textSize="20sp"
                    android:layout_below="@id/password"
                    android:layout_toRightOf="@id/gb_gwh"
                    android:text="我是居委会"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp">

                </TextView>

                <Button
                    android:id="@+id/register_button"
                    android:layout_width="@dimen/edittext_width"
                    android:layout_height="50dp"
                    android:text="注册"
                    android:layout_below="@id/gb_gwh"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/button_bg1"
                    />

                <TextView
                    android:id="@+id/tv_login"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:text="已有账号？去登录"
                    android:layout_below="@id/register_button"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="80dp"></TextView>
            </RelativeLayout>

            <ProgressBar
                android:id="@+id/register_progressbar"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@id/tv_login"
                android:layout_gravity="center"
                android:visibility="invisible"
                android:layout_marginTop="30dp"></ProgressBar>

        </LinearLayout>

    </ScrollView>
</RelativeLayout>